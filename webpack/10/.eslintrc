{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-styles": ["error", "\n"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}